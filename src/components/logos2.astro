---
import { Picture } from "astro:assets";
import aventus from "assets/logos/aventus.svg";
import mandala from "assets/logos/mandala.svg";
import cardano from "assets/logos/cardano.svg";
import polkadot from "assets/logos/polkadot.svg";
import ethereum from "assets/logos/ethereum.svg";
import Link from "@components/ui/link.astro";
---

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-center text-lg font-semibold leading-8 text-gray-900">
      We have worked with projects that are changing the world
    </h2>
    <div
      class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      <Picture
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
        src={aventus}
        alt="Aventus"
        width="148"
        height="48"
      />
      <Picture
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
        src={mandala}
        alt="Mandala"
        width="158"
        height="48"
      />
      <Picture
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
        src={cardano}
        alt="Tuple"
        width="158"
        height="48"
      />
      <Picture
        class="col-span-2 max-h-12 w-full object-contain sm:col-start-2 lg:col-span-1"
        src={polkadot}
        alt="SavvyCal"
        width="158"
        height="48"
      />
      <Picture
        class="col-span-2 col-start-2 max-h-12 w-full object-contain sm:col-start-auto lg:col-span-1"
        src={ethereum}
        alt="Statamic"
        width="158"
        height="48"
      />
    </div>
  </div>
</div>
